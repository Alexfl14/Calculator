<Window x:Class="Calculator.View.AboutDialog" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="About Calculator" 
        Height="200" 
        Width="300" 
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" 
                   Text="{Binding ApplicationName}" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Implemented by:" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding DeveloperName}" 
                       FontWeight="Bold" 
                       Margin="0,2,0,0"/>
            <TextBlock Text="{Binding GroupName, StringFormat=Group: {0}}" 
                       Margin="0,2,0,0"/>
        </StackPanel>
        <Button Grid.Row="2" 
                Content="OK" 
                Width="80" 
                HorizontalAlignment="Center"
                Command="{Binding CloseCommand}"/>
    </Grid>
</Window>